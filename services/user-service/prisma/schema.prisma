generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    DOCTOR
    NURSE
    RECEPTIONIST
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    password  String
    role      Role
    fullName   String?
    phoneNumber String?
    address    String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
